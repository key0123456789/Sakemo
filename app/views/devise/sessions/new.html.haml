= render "shared/header"
- breadcrumb :login
= render partial: 'shared/breadcrumbs'
.container
  .login.single-column
    %h2 ログイン
  .single-column__form
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .field
        = f.label :email, "メールアドレス", class: "form-title"
        = f.email_field :email, autofocus: true, autocomplete: "email", class:"form-text"
      .field
        = f.label :password, "パスワード", class: "form-title"
        = f.password_field :password, autocomplete: "current-password", class:"form-text"
      - if devise_mapping.rememberable?
        .field
          = f.check_box :remember_me
          = f.label :remember_me, "ログイン情報を保持する"
      .actions
        = f.submit "ログイン", class: "submit-btn"
        = render "devise/shared/links"
  = render 'shared/footer'