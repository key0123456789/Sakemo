= render "shared/header"
- breadcrumb :users_edit
= render partial: 'shared/breadcrumbs'
.container
  .registrations-edit.single-column
    %h2 アカウント設定
    .single-column__form
      = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
        = render "devise/shared/error_messages", resource: resource
        .field
          = f.label :email, "メールアドレスの編集", class: "form-title"
          = f.email_field :email, autofocus: true, autocomplete: "email", class:"form-text"
        .field
          = f.label :password, "変更後のパスワード（#{@minimum_password_length}文字以上）", class: "form-title"
          %small パスワードを変更する場合は以下を入力してください。
          = f.password_field :password, autocomplete: "new-password", class:"form-text"
        .field
          = f.password_field :password_confirmation, autocomplete: "new-password", class:"form-text", placeholder: "確認用"
        .field
          = f.label :current_password, "現在のパスワード", class: "form-title"
          = f.password_field :current_password, autocomplete: "current-password", class:"form-text"
        .actions
          = f.submit "更新する", class: "submit-btn"
          .actions__another-links
            = link_to :back, class: "back-btn" do
              %i.fas.fa-chevron-circle-right
              更新せずに戻る
  = render 'shared/footer'